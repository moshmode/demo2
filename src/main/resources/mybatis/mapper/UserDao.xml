<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mosh.demo2.dao.UserDao">

    <resultMap type="com.mosh.demo2.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="right" column="right" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               name,
               password,
               email,
               `right`
        from my_web_data.user
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByName" resultMap="UserMap">
        select id,
               name,
               password,
               email,
               `right`
        from my_web_data.user
        where name = #{name}
    </select>

    <!--查询多个-->
    <select id="queryByPage" resultMap="UserMap">
        select id,
               name,
               password,
               email,
               `right`
        from my_web_data.user
        limit #{pageNow}, #{pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from my_web_data.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="right != null">
                and 'right' = #{right}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.user(name, password, email, `right`)
        values (#{name}, #{password}, #{email}, #{right})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.user(name, password, email, `right`)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.password}, #{entity.email},#{entity.right})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.user(name, password, email, `right`)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.password}, #{entity.email},#{entity.right})
        </foreach>
        on duplicate key update
        name = values(name),
        password = values(password),
        email = values(email)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update my_web_data.user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="right != null">
                `right` = #{right},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from my_web_data.user
        where id = #{id}
    </delete>

</mapper>

