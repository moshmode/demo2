<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mosh.demo2.dao.RoleRightDao">

    <resultMap type="com.mosh.demo2.entity.RoleRight" id="RoleRightMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="rightId" column="right_id" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap type="com.mosh.demo2.entity.right.FinalRight" id="RightMap">
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleRightMap">
        select id,
               role_id,
               right_id
        from my_web_data.role_right
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="query" resultMap="RoleRightMap">
        select id,
               role_id,
               right_id
        from my_web_data.role_right
        where role_id = #{roleId}
          and right_id = #{rightId}
    </select>

    <!--查询单个-->
    <select id="queryRight" resultMap="RightMap">
        select *
        from my_web_data.right
    </select>

    <!--查询单个-->
    <select id="queryByRoleId" resultMap="RoleRightMap">
        select id,
               role_id,
               right_id
        from my_web_data.role_right
        where role_id = #{roleId}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from my_web_data.role_right
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="rightId != null">
                and right_id = #{rightId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.role_right(role_id, right_id)
        values (#{roleId}, #{rightId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.role_right(role_id, right_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.rightId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into my_web_data.role_right(role_id, right_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.rightId})
        </foreach>
        on duplicate key update
        role_id = values(role_id),
        right_id = values(right_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update my_web_data.role_right
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="rightId != null">
                right_id = #{rightId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from my_web_data.role_right
        where id = #{id}
    </delete>

    <!--通过主键删除-->
    <delete id="delete">
        delete
        from my_web_data.role_right
        where role_id = #{roleId}
          and right_id = #{rightId}
    </delete>

</mapper>

